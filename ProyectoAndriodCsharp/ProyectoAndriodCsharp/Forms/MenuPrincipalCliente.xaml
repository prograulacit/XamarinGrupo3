    <ContentPage.Content>

        <Grid>
            <BoxView Color="Black"/>
        <StackLayout>
                <Label Text="Bienvenido"  TextColor="White" FontSize="30"/>

            <Button Text="Ver productos" Clicked="Button_Productos" BackgroundColor="#ecc42c"/>
