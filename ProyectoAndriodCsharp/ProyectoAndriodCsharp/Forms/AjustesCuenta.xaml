<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAndriodCsharp.Forms.AjustesCuenta">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ajustes de la cuenta" FontSize="30"/>
            <Entry x:Name="entry_NombreUsuario" Placeholder="Nombre de usuario"/>
            <Entry x:Name="entry_CorreoElectronico" Placeholder="Correo electronico"/>
            <Entry x:Name="entry_NombreCompleto" Placeholder="Nombre completo"/>
            <Label Text="Saldo de la cuenta:"/>
            <Entry x:Name="entry_Saldo" Placeholder="Saldo actual" />

            <Button Clicked="button_GuardarCambios" Text="Guardar cambios"/>
            <Button Clicked="button_CambiarContrasenia" Text="Cambiar contraseña"/>
            <Button Clicked="button_Volver" Text="Volver"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>