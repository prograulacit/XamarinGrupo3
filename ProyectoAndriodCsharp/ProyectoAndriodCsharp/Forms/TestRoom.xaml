<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAndriodCsharp.Forms.TestRoom">
    <StackLayout>
        <Label Text="Test Room" FontSize="20"/>
        <Label Text="Nombre:"/>
        <Entry x:Name="entry_nombre" />
        <Label Text="Nombre de usuario:"/>
        <Entry x:Name="entry_nombreUsuario" />
        <Label Text="Email:"/>
        <Entry x:Name="entry_Email" />
        <Label Text="Contraseña:"/>
        <Entry x:Name="entry_Contrasenia" IsPassword="True"/>

        <Button Text="Registrarse" Clicked="RegistrarUsuario"/>
        <Button Text="Mostrar usuarios" Clicked="MostrarUsuarios"/>
        <Button Text="Eliminar tablas (Base de datos)" Clicked="EliminarTablas"/>
        <Button Text="Ejecutar SELECT last_insert_rowid()" Clicked="EjecutarSELECTLast_inserted_rowid"/>
        
        <ScrollView>
            <Label x:Name="label_listaUsuarios"/>
        </ScrollView>
        
    </StackLayout>

</ContentPage>