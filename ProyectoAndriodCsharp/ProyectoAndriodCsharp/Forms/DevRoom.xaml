<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAndriodCsharp.Forms.DevRoom">
    <ContentPage.Content>
        <Grid>

            <BoxView Color="Black"/>
            <StackLayout>
                <Label Text="DevRoom" FontSize="30" TextColor="White"/>

                <Button Text="Continuar a la aplicacion" Clicked="button_Continuar" BackgroundColor="#ecc42c"/>
                <Button Text="Reiniciar tablas" Clicked="button_ReiniciarTablas" BackgroundColor="#ecc42c"/>
                <Button Text="Crear usuarios iniciales" Clicked="button_CrearUsuariosIniciales" BackgroundColor="#ecc42c"/>
                <Button Text="Ver registros de Compra y CompraProductos" Clicked="button_RegistrosCompra" BackgroundColor="#ecc42c"/>
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>