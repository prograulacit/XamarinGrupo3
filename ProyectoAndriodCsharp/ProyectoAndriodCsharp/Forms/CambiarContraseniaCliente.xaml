<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAndriodCsharp.Forms.CambiarContraseniaCliente">
    <ContentPage.Content>
        <Grid>
            <!--<Image Source="fondo.png" Aspect="AspectFill"></Image>-->
            <BoxView Color="Black"/>
            <StackLayout>
                <Label Text="Cambio de contraseña" FontSize="36" TextColor="White"/>

                <Entry Placeholder="Contraseña actual" x:Name="entry_ContraseniaActual" IsPassword="True" PlaceholderColor="White" TextColor="#ecc42c"/>
                <Entry Placeholder="Nueva contraseña" x:Name="entry_NuevaContrasenia" IsPassword="True" PlaceholderColor="White" TextColor="#ecc42c"/>
                <Entry Placeholder="Confirmar contraseña" x:Name="entry_ConfirmarContrasenia" IsPassword="True" PlaceholderColor="White" TextColor="#ecc42c"/>

                <Button Text="Guardar cambios" Clicked="Button_GuardarCambios" BackgroundColor="#ecc42c"/>
                <Button Text="Volver" Clicked="Button_Volver" BackgroundColor="#ecc42c"/>
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>