<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAndriodCsharp.Forms.DescripcionProducto">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Detalles del Producto" FontSize="Title" TextColor="Black"></Label>
            <Label Text="Nombre del producto: " ></Label>
          <Label x:Name="NombreProducto"/>

            <Label Text="Descripción:" ></Label>
            <Label x:Name="DescripcionProduct"/>

            <Label Text="Precio:" ></Label>
            <Label x:Name="PrecioProducto"/>
            <Button x:Name="btnMenu" Text="Menu" Clicked="btnMenu_Clicked" ></Button>
            <Button x:Name="btnlogout" Text="Salir" Clicked="btnlogout_Clicked" ></Button>
            <ImageButton x:Name="btnCarrito" Source="carrito.png" WidthRequest="50" HeightRequest="50" Clicked="btnCarrito_Clicked"> </ImageButton>
             


        </StackLayout>
    </ContentPage.Content>
</ContentPage>